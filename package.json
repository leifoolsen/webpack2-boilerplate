{
  "name": "webpack2-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate for ES2015 and SASS using Webpack2.",
  "author": "Leif Olsen <leif.o.olsen.at.gmail.com> (https://github.com/leifoolsen)",
  "main": "webpack.config.babel.js",
  "engineStrict": true,
  "engines": {
    "node": ">= 6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leifoolsen/webpack2-boilerplate.git"
  },
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "moment": "2.18.1",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "babel-cli": "6.24.0",
    "babel-core": "6.24.0",
    "babel-eslint": "7.2.1",
    "babel-loader": "6.4.1",
    "babel-plugin-__coverage__": "11.0.0",
    "babel-plugin-istanbul": "4.1.1",
    "babel-preset-env": "1.2.2",
    "babel-preset-stage-0": "6.22.0",
    "babel-register": "6.24.0",
    "body-parser": "1.17.1",
    "chai": "3.5.0",
    "chai-as-promised": "6.0.0",
    "chalk": "1.1.3",
    "compression": "1.6.2",
    "connect-history-api-fallback": "1.3.0",
    "copy-webpack-plugin": "4.0.1",
    "cross-env": "3.2.4",
    "css-loader": "0.27.3",
    "cucumber": "2.0.0-rc.9",
    "eslint": "3.18.0",
    "eslint-loader": "1.7.0",
    "exports-loader": "0.6.4",
    "express": "4.15.2",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.10.1",
    "html-loader": "0.4.5",
    "html-webpack-plugin": "2.28.0",
    "http-proxy-middleware": "0.17.4",
    "husky": "0.13.3",
    "ignore-styles": "5.0.1",
    "imports-loader": "0.7.1",
    "ip": "1.1.5",
    "istanbul": "1.1.0-alpha.1",
    "jsdom": "9.12.0",
    "material-design-icons": "3.0.1",
    "mocha": "3.2.0",
    "node-http-ping": "0.2.2",
    "node-sass": "4.5.1",
    "npm-run-all": "4.0.2",
    "postcss-loader": "1.3.3",
    "precss": "1.4.0",
    "raw-loader": "0.5.1",
    "require-uncached": "1.0.3",
    "resolve-url-loader": "2.0.2",
    "rimraf": "2.6.1",
    "roboto-fontface": "0.7.0",
    "sass-loader": "6.0.3",
    "selenium-standalone": "6.1.0",
    "sinon": "2.1.0",
    "style-loader": "0.16.1",
    "stylelint": "7.9.0",
    "stylelint-config-standard": "16.0.0",
    "stylelint-webpack-plugin": "0.7.0",
    "supertest": "3.0.0",
    "url-loader": "0.5.8",
    "wdio-cucumber-framework": "0.2.16",
    "wdio-mocha-framework": "0.5.9",
    "wdio-phantomjs-service": "0.2.2",
    "wdio-selenium-standalone-service": "0.0.8",
    "wdio-spec-reporter": "0.1.0",
    "webdriverio": "4.6.2",
    "webpack": "2.3.2",
    "webpack-bundle-size-analyzer": "2.5.0",
    "webpack-dev-middleware": "1.10.1",
    "webpack-hot-middleware": "2.17.1"
  },
  "keywords": [
    "Webpack2",
    "Webpack",
    "JavaScript",
    "ES6",
    "ES2015",
    "ECMASCRIPT 2015",
    "ES7",
    "ES2016",
    "ECMASCRIPT 2016",
    "Babel",
    "SASS",
    "SASS Boilerplate",
    "Mocha",
    "Chai",
    "Istanbul",
    "Node Express",
    "Cucumber",
    "WebdriverIO"
  ],
  "license": "MIT",
  "scripts": {
    "setup": "npm install && npm-run-all clean validate",
    "clean": "rimraf dist rimraf coverage",
    "validate": "npm-run-all lint test:unit",
    "analyze": "webpack --env.prod --json | webpack-bundle-size-analyzer",
    "precommit": "npm run lint",

    "lint": "npm-run-all lint:*",
    "lint:stylelint": "stylelint \"./src/**/*.s?(a|c)ss\" --syntax scss",
    "lint:eslint": "eslint ./src ./server ./test --max-warnings 10",

    "build:dll": "webpack --config webpack.config.dll.js",
    "prebuild": "npm-run-all clean lint build:dll && npm run coverage:unit -- --env.dev",
    "postbuild": "npm run coverage:it -- --env.prod && npm-run-all coverage:report check:coverage",
    "build": "cross-env NODE_ENV=development babel-node ./node_modules/.bin/webpack --progress",
    "prebuild:prod": "npm-run-all clean lint && npm run coverage:unit -- --env.prod",
    "postbuild:prod": "npm run coverage:it -- --env.prod  && npm-run-all coverage:report check:coverage",
    "build:prod": "cross-env NODE_ENV=production babel-node ./node_modules/.bin/webpack --progress",

    "coverage:unit": "cross-env NODE_ENV=test babel-node ./node_modules/.bin/istanbul cover --root ./src --dir ./coverage/unit _mocha -- --opts ./mocha.opts \"./test/unit/**/*.spec.js\"",
    "coverage:it": "cross-env NODE_ENV=test babel-node ./node_modules/.bin/istanbul cover --root ./src --dir ./coverage/integration _mocha -- --opts ./mocha.opts \"./test/integration/**/*.spec.js\"",
    "coverage:report": "babel-node ./node_modules/.bin/istanbul report --root ./coverage --include **/coverage.raw.json lcov html",
    "check:coverage": "istanbul check-coverage  --root ./coverage --statements 50 --branches 50 --functions 50 --lines 50",

    "test": "npm-run-all test:unit test:it",
    "test:unit": "cross-env NODE_ENV=test mocha --env.dev --opts ./mocha.opts \"./test/unit/**/*.spec.js\"",
    "test:it": "cross-env NODE_ENV=test mocha --env.dev --opts ./mocha.opts \"./test/integration/**/*.spec.js\"",
    "test:watch": "npm run test:unit -- --watch",
    "test:single": "cross-env NODE_ENV=test mocha --env.dev --watch --opts ./mocha.opts",
    "test:pattern": "cross-env NODE_ENV=test mocha --env.dev --watch --opts ./mocha.opts --grep $pattern",
    "test:proxy-example": "cross-env NODE_ENV=test mocha --env.dev --proxy --opts ./mocha.opts \"./test/integration/proxy/proxy-example.js\"",

    "server": "cross-env NODE_ENV=production babel-node ./server",
    "start": "babel-node ./server --hot",
    "wdio": "cross-env NODE_ENV=test cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 babel-node ./node_modules/.bin/wdio ./test/wdio.conf.js --env.prod"
  }
}
